<div class="row">
    <div class="col-8 offset-2">
    
    <!-- record overview card display -->
            <div class="card mb-3"> 

                <div class="row g-0 d-flex flex-wrap align-items-center">
                    <div class="col-md-4">
                        <img crossorigin="anonymous" src="<% if (bUseAltImgPath) { %>
                            <% var imgPath = guest.image.url %>
                            <% //var altImgPath = imgPath.slice(2) %>
                            <%=altImgPath %>
                            <% } else { %>
                                <%=guest.image.url%>
                            <% } %>
                            " class="img-fluid rounded-start">
                    </div>
                    <div class="col-md-8">

                        <div class="card-body">
                            <h3 class="card-title"><%= guest.name %></h3>
                            <h6 class="card-subtitle mb-2 text-muted"><small><%=guest.breed%> &bullet; <%=guest.age %> y/o &bullet; <%=guest.weight %> lbs</small></h6>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><i>Owner: &nbsp;</i> 
                                    <small><a href="/client-records/<%= guest.owner._id %>">
                                     <%= guest.owner.fullName %></a> </small></li>
                                <li class="list-group-item"><i>Notes: &nbsp;</i><small> <%= guest.notes %></small></li>
                                <li class="list-group-item"> </li>
                                </ul>
                                <!-- edit and delete buttons -->
                                <div class="text-center">
                                    <a href="/guest-records/<%=guest._id%>/edit" class="btn btn-primary btn-sm">Edit</a> 

                                    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 20 20">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg> Delete</a></button>

                                </div>
                            
                        </div>

                    </div>
                </div>
            </div>

    <!-- delete record Modal pop-up -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%=guest.name%></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            Permanently delete this guest record?
        </div>
        <div class="modal-footer">
            <form action="/guest-records/<%=guest._id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 20 20">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg> Delete</button>
            </form>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
        </div>
    </div>
    </div>
 </div> <!--end of row -->