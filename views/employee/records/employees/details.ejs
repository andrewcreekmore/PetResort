<%- include('../../../partials/header') %>

<h2 class="display-6 text-center">Employee Record</h2>

<!-- display any flash messages -->
<div class="w-50 mx-auto text-center mt-3">
    <%- include('../../../partials/flash') %>
</div>

<div class="row">
    <div class="col-8 offset-2">

            <div class="card my-3"> 

                <div class="row g-0 d-flex flex-wrap align-items-center">
                    <div class="col-md-4">
                        <img src="../../img/user.png" class="img-fluid rounded-start">
                    </div>
                    <div class="col-md-8">

                        <div class="card-body">
                            <h3 class="card-title"><%= employee.fullName %></h3>
                            <h6 class="card-subtitle mb-2 text-muted"><%= employee.role %>  </h6>
                            <!-- <br></br> -->
                            <ul class="list-group list-group-flush mb-3">

                                <li class="list-group-item"><i>Email: &emsp;  </i> <%= employee.email %></li>
                                <li class="list-group-item"><i>Phone: &nbsp; &nbsp; </i> <%= employee.formattedPhone %> </li>
                                <li class="list-group-item"><i>Address: &nbsp; </i> 
                                    <% if (employee.address.streetAddress) { %>
                                        <%= employee.formattedAddress%>
                                    <br>  &nbsp; &emsp; &emsp; &emsp;   <%=employee.address.city %>, <%=employee.address.state %> <br> &nbsp; &emsp; &emsp; &emsp;
                                     <%=employee.address.zip %> </br>  
                                     <% } %>
                                    </li>

                                </ul>
                                <!-- edit and delete buttons -->
                                <div class="text-center">
                                    <a href="/employee-records/<%=employee._id%>/edit" class="btn btn-primary">Edit</a> 

                                    <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 20 20">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg> Delete</a></button>

                                </div>
                            
                        </div>

                    </div>
                </div>
            </div>
    
    <h4 class="display-12 text-center" style="padding-top: 25px;">Login Credentials</h4>

    <!-- billing summary: account credit / balance -->
    <div class="table-responsive my-3" style="max-height: 600px">
        <table class="table table-hover">
        <thead>
            <tr>
            
            <th scope="col" style="text-align: center">Username</th>
            <th scope="col" style="text-align: center">Admin Access</th>
            <th scope="col" style="text-align: center">Password</th>

            </tr>
        </thead>
        <tbody>
                    <tr>
                    <td valign="middle" style="text-align: center"><%= employee.username  %></td>

                    <td valign="middle" style="text-align: center"><%= employee.adminAccess %></td>
                    <td valign="middle" style="text-align: center"><a href="/resetDirect/<%= employee._id %>" class="btn btn-outline-primary btn-sm">Reset</a></td>
                  
                    </tr>
        </tbody>
        </table>
    </div>


</div> <!--end of container -->


    <!-- back (return to index) button -->
    <div class="mx-auto mt-3">
        <a href="/admin" class="btn btn-outline-primary"><- All Employees</a>
    </div>

</div>

    <!-- delete record Modal pop-up -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete <b><%=employee.fullName%></b></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            Permanently delete this employee record? 
            <br> 

        </div>
        <div class="modal-footer">
            <form action="/employee-records/<%=employee._id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 20 20">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg> Delete</button>
            </form>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
        </div>
    </div>
    </div>

<%- include('../../../partials/footer') %>