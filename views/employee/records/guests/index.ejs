<%- include('../../../partials/header') %>

<h2 class="display-6 mb-3 text-center">Guest Records</h2>

<!-- display any flash messages -->
<div class="w-50 mx-auto text-center mt-3">
    <%- include('../../../partials/flash') %>
</div>

<div class="container">

    <script>
        var searchValue = $("#inputSearch").val()
        //console.log(searchValue)
    </script>

        <form class="row g-3 mt-3 col-6 mx-auto" action="/guest-records?nameSearch=" method="GET">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="inputSearch" name="nameSearch" placeholder="Guest Name">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>



    <div class="table-responsive" style="max-height: 600px">
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Breed</th>
            <th scope="col">Client</th>
            <th scope="col">Current Guest</th>
            </tr>
        </thead>
        <tbody>

            <% for(let guest of guests) { %>

            <tr>
            <td><a href="/guest-records/<%= guest._id %>"><%= guest.name %></a></td>
            <td><%= guest.type %></td>
            <td><%= guest.breed %></td>
            <td><a href="/client-records/<%= guest.owner._id %>"><%= guest.owner.fullName %></td>
            <td><%= guest.current %></td>
            </tr>

            <% } %>

        </tbody>
        </table>

    </div>

    <div>
            <a href="/guest-records"> All</a>  |  <a href="/guest-records?current=true"> Current only </a>
    </div>


    <div class="d-grid gap-2 col-6 mx-auto">
        <a href="/guest-records/new" class="btn btn-primary">Add new Guest</a>
    </div>



</div>

<%- include('../../../partials/footer') %>
