<%- include('../../../partials/header') %>
<%- include('../../../partials/breadcrumbs') %>

<h2 class="display-6 mb-3 text-center">Edit Kennel</h2>

<div class="container">

    <!-- horizontal rule / divider -->
    <div class="row">
        <div class="col-5"></div>
        <div class="col-2">
            <hr class="mt-0">
        </div>
    </div> <!-- end of row -->
    
    <form class="row align-items-center mt-1 mb-4 text-center" action="/kennel-records/<%=kennel._id%>?_method=PUT" method="POST" novalidate>

        <div class="col-4"></div>
        <div class="col-2">
            <label for="kennel_idInput" class="form-label">ID</label>
            <input class="form-control" type="text" name="kennel[kennel_id]" value="<%= kennel.kennel_id %>" readonly disabled>

            <!-- hidden kennel_id input that isn't disabled-->
            <input class="form-control" type="text" name="kennel[kennel_id]" value="<%= kennel.kennel_id %>" readonly hidden>
        </div>

        <div class="col-2">
            <label for="sizeInput" class="form-label">Size</label>
            <select class="form-select" aria-label="sizeInput" id="sizeInput" name="kennel[size]" required>
                <option value="" disabled>Select...</option>
                <option value="s" <% if (kennel.size === 's') { %>
                    selected
                    <% } %>
                    >Small</option>
                <option value="m" <% if (kennel.size === 'm') { %>
                    selected
                    <% } %>
                    >Medium</option>
                <option value="l" <% if (kennel.size === 'l') { %>
                    selected
                    <% } %>
                    >Large</option>
            </select>
            <div id="sizeInputFeedback" class="invalid-feedback">
                Kennel size is required.
            </div>
        </div>
    </div> 

    <!-- horizontal rule / divider -->
    <div class="row">
        <div class="col-5"></div>
        <div class="col-2">
            <hr class="mt-3">
        </div>
    </div> <!-- end of row -->

    <div class="row mb-0"></div>

    <div class="mx-auto mt-0 text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-outline-primary">Revert Changes</button>
    </div>
    
    </form>

    <div class="mx-auto mt-3 text-center">
    <!-- delete service button -->
        <button class="btn btn-outline-danger" id="kennelDeleteButton" data-bs-toggle="modal" data-bs-target="#deleteKennelModal">  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 20 20">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
        </svg> Delete</a></button>
    </div>

</div> <!--  end of container -->

<!-- delete kennel Modal pop-up -->
<div class="modal fade" id="deleteKennelModal" tabindex="-1" aria-labelledby="deleteKennelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%=kennel.formatted_id%></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            Permanently delete this Kennel record?
            <br>

            </br>
            </br>
            </br>
            </br>
        </div>
        <div class="modal-footer">
            <form action="/kennel-records/<%=kennel._id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 20 20">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg> Delete</button>
            </form>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
        </div>
    </div>
</div>

<%- include('../../../partials/footer') %>