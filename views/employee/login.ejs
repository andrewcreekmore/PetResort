<%- include('../partials/header') %>

<h2 class="display-6 text-center mb-3">Employee Login</h2>

<!-- horizontal rule / divider -->
<div class="row">
    <div class="col-5"></div>
    <div class="col-2">
        <hr class="mt-3">
    </div>
</div> <!-- end of row -->  

<div class="container mt-3">

    <!-- display any flash messages -->
    <div class="w-50 mx-auto text-center mt-3">
        <%- include('../partials/flash') %>
    </div>

    <form action="/login" method="POST" novalidate class="validated-form">

        <div class="col-sm-4 offset-sm-8 mx-auto">

        <!-- USERNAME, PASSWORD -->
        <div class="row">

            <div class="mb-3">
                <label for="usernameInput" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="usernameInput" placeholder="" aria-label="username" required>
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                    Username is required.
                </div>
            </div>


        </div> <!-- end of row -->

        <div class="row">
            <div class="mb-1">
                <label for="passwordInput" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="passwordInput" placeholder="" aria-label="password" required>
                <div id="validationServerPasswordFeedback" class="invalid-feedback">
                    Password is required.
                </div>
            </div>

        </div> <!-- end of row -->

        <div class="row mb-3">
            <a href="/admin/forgot" class="link-secondary">Forgot password?</a>
        </div>

        </div>

    <!-- horizontal rule / divider -->
    <div class="row">
        <div class="col-5"></div>
        <div class="col-2">
            <hr class="mt-3">
        </div>
    </div> <!-- end of row  -->


    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary">Sign in</button> 
        <a href="/employee" class="btn btn-outline-primary">Back</a>
    </div>

    </form>

</div> <!-- end of container-->


<%- include('../partials/footer') %>