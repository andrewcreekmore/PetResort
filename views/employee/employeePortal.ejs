<%- include('../partials/header') %>

<h2 class="display-6 text-center">Employee Dashboard</h2>

<div class="container mt-3">

<!-- horizontal rule / divider -->
<div class="row">
    <div class="col-5"></div>
    <div class="col-2">
        <hr class="mt-3">
    </div>
</div> <!-- end of row -->

<!-- display any flash messages -->
<div class="w-50 mx-auto text-center mt-3">
    <%- include('../partials/flash') %>
</div>

<!-- options -->
<div class="mx-auto mt-3">
    <% if (!currentUser) { %>
        <div class="col-3 mx-auto mb-3 text-center">
            <a href="/login" class="btn btn-primary">Log In</a>
        </div>
    <% } else { %>

        <div class="col-sm-4 mb-3 mx-auto">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="fw-bold">Occupancy</div>
                    18 / 30
                </li>
            </ul>
        </div>

        <div class="row">
           
            <div class="col-sm-4 mb-3 text-center">
                <div class="card">
                    <h5 class="card-header">Kennels</h5>
                    <div class="card-body">
                        <p class="card-text">Need cleaning: &nbsp; <span class="badge bg-secondary">3</span> </p>
                        <a href="#" class="btn btn-outline-primary btn-sm">View</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-4 mb-3 text-center">
                <div class="card">
                    <h5 class="card-header">Guests</h5>
                    <div class="card-body">
                        <p class="card-text">Need servicing: &nbsp; <span class="badge bg-secondary">3</span>  </p>
                        <a href="/guest-records" class="btn btn-outline-primary btn-sm">View</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-4 mb-3 text-center">
                <div class="card">
                    <h5 class="card-header">Clients</h5>
                    <div class="card-body">
                        <p class="card-text">Check-outs today: &nbsp; <span class="badge bg-secondary">3</span></p>
                        <a href="/client-records" class="btn btn-outline-primary btn-sm">View</a>
                    </div>
                </div>
            </div>

        </div> <!-- end of row -->
        

        <div class="row">
            <div class="col-3 mx-auto mt-3 mb-3 text-center">
                <a href="/admin" class="btn btn-primary">Admin Tools</a>
            </div>
        </div> 

        <!-- horizontal rule / divider -->
        <div class="row">
            <div class="col-5"></div>
            <div class="col-2">
                <hr class="mt-3">
            </div>
        </div> <!-- end of row -->

        <div class="row">
            <div class="col-3 mx-auto mb-3 text-center">
                <a href="/logout" class="btn btn-outline-primary">Log Out</a>
            </div>
        </div>

    <% } %>
</div>

</div> <!-- end of container-->

<%- include('../partials/footer', {adminAccess}) %>