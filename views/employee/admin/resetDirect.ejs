<%- include('../../partials/header') %>

<h2 class="display-6 text-center">Reset <%= employee.fullName %>'s Password</h2>

<div class="container mt-3">
    <!-- <div class="row"></div> -->

    <!-- horizontal rule / divider -->
    <div class="row">
        <div class="col-5"></div>
        <div class="col-2">
            <hr class="mt-3">
        </div>
    </div> <!-- end of row -->

    <!-- display any flash messages -->
    <div class="w-50 mx-auto text-center mt-3">
        <%- include('../../partials/flash') %>
    </div>


    <form action="/admin/resetDirect/<%= employee._id %>" method="POST" novalidate class="validated-form">

        <div class="col-sm-5 offset-sm-8 mx-auto">
            <div class="row">
                <div class="mb-3">
                    <input type="password" class="form-control" name="password" id="passwordInput" placeholder="New password" aria-label="password" autocomplete="new-password" aria-autocomplete="none" required>
                    <div id="validationServerPasswordFeedback" class="invalid-feedback">
                        New password is required.
                    </div>
                </div>
            </div> <!-- end of row-->

            <div class="row">
                <div class="mb-3">
                    <input type="password" class="form-control" name="passwordConfirm" id="passwordConfirmInput" placeholder="Confirm new password" aria-label="passwordConfirm" autocomplete="new-password" aria-autocomplete="none" required>
                    <div id="validationServerPasswordFeedback" class="invalid-feedback">
                        Password confirmation is required.
                    </div>
                </div>
            </div> <!-- end of row-->
        </div>

        <!-- horizontal rule / divider -->
        <div class="row">
            <div class="col-5"></div>
            <div class="col-2">
                <hr class="mt-3">
            </div>
        </div> <!-- end of row -->

        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-primary">Submit</button> 
            <a href="/employee-records/<%= employee._id %>" class="btn btn-outline-primary">Back</a>
        </div>
    </form>



</div> <!-- end of container-->

<%- include('../../partials/footer') %>