<%- include('../partials/header') %>

<h2 class="display-6 mb-1 text-center">Dashboard</h2>



<!-- horizontal rule / divider -->
<div class="row mb-1">
    <div class="col-5"></div>
    <div class="col-2">
        <hr class="mt-3">
    </div>
</div> <!-- end of row -->

<!-- display any flash messages -->
<div class="w-50 mx-auto text-center">
    <%- include('../partials/flash') %>
</div>

<!-- options -->
<!-- <div class="mx-auto"> -->

<div class="col-sm-4 mb-3 mx-auto">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="fw-light">Occupancy</div>
            <span class="badge bg-primary" style="margin-top: 0.25em;">
                <%= visits.length %> / 30
            </span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="fw-light">Pending Services</div>
            <% var incompleteServiceCount = 0 %>
            <% for (visit of visits) { %>
                <% for(i = 0; i < visit.services.length; i++) { %>
                    <% const test = (element) => element.name === visit.services[i].name  %>
                    <% if (!visit.servicesRendered.some(test)) { %>
                        <% incompleteServiceCount++ %>
                    <% } %>
                <% } %>
            <% } %>
            <span class="badge bg-danger" style="margin-top: 0.25em;"><%= incompleteServiceCount %></span>
            
        </li>
    </ul>
</div>

<div>
    <p class="lead">&nbsp;Current Guests</p>
</div>

<div class="table-wrap" style="height: 425px; overflow-y: auto;">
    <div class="table-responsive mb-1" style="max-height: 425px;">
        <table class="table table-striped table-hover">
            <thead>
                    <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Kennel</th>
                    <th scope="col">Checkout Date</th>
                    <th scope="col">Services</th>
                    <th scope="col">Billing</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                <% for(let visit of visits) { %>
                    <tr>
                        <td>
                            <a href="/guest-records/<%= visit.guest._id %>" style="text-decoration: none;">
                            <%= visit.guest.name %></a>
                        </td>
                        <td><%= visit.assignedKennel.formatted_id %></td>
                        <td><%= visit.formatDate('endDate') %></td>
                        <td>
                            <% const serviceStatus = visit.allServicesRendered? 'Complete' : 'Pending' %>
                            <span <% if (!visit.allServicesRendered) { %>
                                style='color: crimson'
                                <% } %>>
                                <%= serviceStatus %>
                            </span>
                            
                        </td>
                        <td>
                            <% const billingStatus = visit.paid? 'Paid' : 'Unpaid' %>
                            <span <% if (!visit.paid) { %>
                                style='color: crimson'
                                <% } %>>
                                <%= billingStatus %>
                            </span>
                        </td>
                        <td style="text-align: right;"> <a href="/visit-records/<%=visit._id %>" class="btn btn-outline-primary btn-sm">Details</a></td>
                    </tr>
                <% } %>

            </tbody>
        </table>

    </div>
</div> <!-- end of table-wrap-->


